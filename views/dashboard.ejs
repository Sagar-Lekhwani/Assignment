<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
 <style>
    #a{
        position: absolute;
        top: 4%;
        right: 5%;
        text-decoration: none;
    }
    #b{
        position: absolute;
        top: 4%;
        right: 20%;
        text-decoration: none;
    }
 </style>
<body>
    <a id="a" class="btn btn-primary" href="/medicine">Add Medicine Reminder</a>
    <a id="b" class="btn btn-primary" href="/caretaker">Add Caretaker</a>
    <h1 class="p-4">User's Dashboard</h1>
    <div class="container overflow-hidden text-center">
        <div class="row gy-5">
            <% founduser.medicine.reverse().forEach(function(med){ %>
            <div class="col-3">
                <div class="p-3">
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">Medicine: <%= med.medname %></h5>
                            <p class="card-text">Time : <%= med.hrs %>:<%= med.minutes %></p>
                            <p class="card-text">Service Name : <%= med.services %></p>
                            <a href="/delete/<%= med._id %>" class="btn btn-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
</body>

</html>